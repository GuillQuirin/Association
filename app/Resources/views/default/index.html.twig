{% extends 'base.html.twig' %}

{% block title %}
    accueil
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row text-center text-lg-left">
        {% for association in associations %}
                <div class="col-lg-3 col-md-4 col-xs-6" style="border:1px solid">
                    <a href="#" class="d-block mb-4 h-100">
                      {{association.nom}} 
                      <br>
                      {% if association.is_active== 1%}
                          Disponible ce jeudi : <span class="glyphicon glyphicon-ok"></span>
                      {% else %}
                          Disponible ce jeudi : <span class="glyphicon glyphicon-ban-circle"></span>
                      {% endif %}
                    </a>
                 </div>
        {% endfor %}
         </div>
    </div>
{% endblock %}
