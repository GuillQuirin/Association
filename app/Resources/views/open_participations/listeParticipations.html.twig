{% extends 'base.html.twig' %}

{% block title %}
    admin participations
{% endblock %}

{% block body %}
     <div class="row">
        <div class="col-xs-12 col-md-12">
            <a href="{{ path("add_associations")}}">Ajouter une participation</a>
            <p>Liste des participations pour l'association {{association.nom}}</p>
            <table class="table table-striped datatable_esgi">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Eleve</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for participation in Participations %}
                        <tr>
                            <td class="col s3">{{ participation.date_crea|date('d/m/Y') }}</td>
                            <td class="col s3">{{ participation.user_id.nom }} {{ participation.user_id.prenom }}</td>
                            <td class="col s3">
                                <a href="{{path('delete_association',{'id':association.id})}}" class="orange-text text-lighten-2">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>
                                <a href="{{path('edit_association',{'id':association.id})}}" class="orange-text text-lighten-2">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}