{% extends 'base.html.twig' %}

{% block title %}
    admin participations
{% endblock %}

{% block body %}
    <h3 class="text-center">Liste des élèves inscrits</h3>
    <div class="row">
        <div class="col-xs-12 col-md-12">
            <table class="table table-striped datatable_esgi">
                <thead>
                    <tr>
                        <th>Promotion</th>
                        <th>Nom</th>
                        <th>Prénom</th>
                        <th>Statut</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for user in Users %}
                        <tr>
                            <td class="col s3">{{ user.annee }}</td>
                            <td class="col s3">{{ user.nom }}</td>
                            <td class="col s3">{{ user.prenom }}</td>
                            <td class="col s3">
                                {% if user.statut == 1 %}
                                    Administrateur
                                {% else %}
                                    Utilisateur
                                {% endif %}
                            </td>
                            <td class="col s3">
                                <a href="{{path('delete_user',{'id':user.id})}}" class="orange-text text-lighten-2">
                                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                </a>
                                <a href="{{path('edit_user',{'id':user.id})}}" class="orange-text text-lighten-2">
                                    <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}